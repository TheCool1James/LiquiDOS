{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch in Virtual Box",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/Program Files/Oracle/VirtualBox/VBoxManage.exe",
            "args": ["startvm", "LiquiDOS"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false
        },
        {
            "name": "Launch with GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/bin/cxkrnl.bin",
            "cwd": "${workspaceRoot}",
            "args": [],
            "windows":{
                "sourceFileMap": {
                    "/mnt/c/": "/C:/",
                    "arch/x86/asm/": "${workspaceRoot}/kernelsrc/arch/x86/asm/"
                },
            },
            "targetArchitecture": "x86",
            "MIMode": "gdb",
            "miDebuggerPath": "C:/cygwin/bin/gdb.exe",
            "miDebuggerArgs": "",
            "customLaunchSetupCommands": [
                {
                    "text": "target remote localhost:1234",
                    "description": "Connect to QEMU remote debugger"
                }
            ],
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "file C:/Users/Kevin/Desktop/osdev/build/bin/cxkrnl.bin"
                },
                {
                    "text": "break isr_handler",
                    "description": "Break on exception handler."
                }
            ],
            "preLaunchTask": "Launch QEMU Debug",
            "postDebugTask": "Kill QEMU"
        }
    ]
}