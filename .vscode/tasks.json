{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure (Debug)",
            "type": "shell",
            "command": [
                "rm -rf build/cmake-build;",
                "mkdir build/cmake-build;",
                "cd build/cmake-build && ",
                "cmake -G 'Unix Makefiles' -DTARGET=${input:buildTarget} -DBUILD_TYPE=DEBUG -DCUSTOM_FILENAME=ON ${workspaceFolder}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Configure (Integration Test)",
            "type": "shell",
            "command": [
                "rm -rf build/cmake-build;",
                "mkdir build/cmake-build;",
                "cd build/cmake-build && ",
                "cmake -G 'Unix Makefiles' -DTARGET=${input:buildTarget} -DBUILD_TYPE=INTEGRATION_TEST -DCUSTOM_FILENAME=ON ${workspaceFolder}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Configure (Unit Test)",
            "type": "shell",
            "command": [
                "rm -rf build/cmake-build;",
                "mkdir build/cmake-build;",
                "cd build/cmake-build && ",
                "cmake -G 'Unix Makefiles' -DTARGET=${input:buildTarget} -DBUILD_TYPE=UNIT_TEST -DCUSTOM_FILENAME=ON ${workspaceFolder}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Configure (Release)",
            "type": "shell",
            "command": [
                "rm -rf build/cmake-build;",
                "mkdir build/cmake-build;",
                "cd build/cmake-build &&",
                "cmake -G 'Unix Makefiles' -DTARGET=${input:buildTarget} -DBUILD_TYPE=RELEASE -DCUSTOM_FILENAME=ON ${workspaceFolder}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "make --no-print-directory -C build/cmake-build/",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Make Clean",
            "type": "shell",
            "command": "make clean --no-print-directory -C build/cmake-build/",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            }
        },
        {
            "label": "Launch QEMU Debug",
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ],
            "command": [
                "qemu-system-i386 -S -gdb tcp::1234",
                "-boot d -cdrom build/bin/LiquiDOS.iso -m 128",
                "-serial file:logs/COM1.log -monitor stdio"
            ]
        },
        {
            "label": "Launch QEMU Kernel Tests",
            "type": "shell",
            "command": [ 
                "qemu-system-i386 -display none",
                "-boot d -cdrom build/bin/LiquiDOS.iso -m 128 -enable-kvm -cpu host,-pae",
                "-chardev stdio,id=char0,logfile=logs/COM3.log",
                "-monitor pty -serial file:logs/COM1.log -serial null -serial chardev:char0"
            ],
            "problemMatcher": []
        },
        {
            "label": "Launch QEMU",
            "type": "shell",
            "linux": {
                "command": "qemu-system-i386 -boot d -cdrom build/bin/LiquiDOS.iso -m 256 -enable-kvm -cpu host"
            },
            "windows": {
                "command": "qemu-system-i386 -boot d -cdrom build/bin/LiquiDOS.iso -m 256"
            }
        },
        {
            "label": "Kill All QEMU Instances",
            "type": "shell",
            "linux": {
                "command": "pkill qemu"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "buildTarget",
            "description": "Which target do you want to build for?",
            "options": [
              "x86_32",
              //"x86_64"
            ],
            "default": "x86_32"
          }
    ]
}